@{
    ViewBag.Title = "IMC";
}
<!DOCTYPE html>
<html>
<head>
    <title> Resultado IMC </title>
    <meta charset="utf-8" />

</head>
<body>
    <h1> Resultado </h1>
    </div>
    <div class="seccion_1" id="s1">
        <ul>
            <li>IMC menor que 18,5 -> peso insuficiente</li>
            <li>IMC 18,5 y 24.9 -> peso normal</li>
            <li>mayor que 25 -> peso sobrepeso</li>
        </ul>
        <hr />
    </div>

    <div class="seccion_2" id="s2">
        <button onclick="location.href='/Home/'">Volver a inicio</button>
    </div>

    <div class="seccion_3" id="s3">

        <table class="table">

            <tr>

                <th> id </th>

                <th> Nombre</th>

                <th> Peso </th>

                <th> Estatura </th>

                <th> IMC </th>

            </tr>

            @for (int i = 0; i < 30; i++)
            {
                <tr>
                    <td> @ViewBag.lista[i].Id</td>
                    <td>@ViewBag.lista[i].Nombre</td>

                    <td> @ViewBag.lista[i].Peso</td>

                    <td> @ViewBag.lista[i].Estatura</td>

                    @if (@ViewBag.IMCL[i] > 20) 
                    {
                        <td style="color:rgb(41 129 11 / 0.92)">@ViewBag.IMCL[i] </td>
                    }
                    else
                    {
                        <td style="color: rgb(113 18 16 / 0.88)">@ViewBag.IMCL[i] </td>
                    }
                </tr>
            }



        </table>
        <hr />



</body>
</html>
